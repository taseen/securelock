{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "SecureLock",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": { "open": true },
      "dialog": { "open": true }
    },
    "bundle": {
      "active": true,
      "identifier": "net.manage360.apps.securelock",
      "icon": ["icons/icon.png", "icons/icon.ico"],
      "targets": "all",
      "publisher": "Manage360",
      "windows": {
        "nsis": {
          "installerIcon": "icons/icon.ico"
        },
        "wix": {
          "dialogImagePath": "icons/icon.png",
          "bannerPath": "icons/icon.png"
        }
      }
    },
    "security": { "csp": null },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [{
      "title": "SecureLock",
      "width": 680,
      "height": 520,
      "minWidth": 500,
      "minHeight": 400,
      "resizable": true,
      "decorations": true,
      "center": true
    }]
  }
}
